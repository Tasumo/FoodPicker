<% include ./partials/header %>
<!-- <script src="../public/functions.js"></script> -->

<div class="container-fluid mt-4">
  <form action="/results" method="GET">
    <div class="row justify-content-center">
      <div class="col-sm-3">
        <label for="InputLocation">Location</label>
        <input type="text" id="InputLocation" class="form-control" name= userRequest[location] placeholder="location">
      </div>
      <div class="col-sm-3">
        <div class="form-group">
            <label for="numLocation">Number of Locations</label>
            <select class="form-control" name= userRequest[numLocation] id="numLocation">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
              <option>9</option>
              <option>10</option>
            </select>
          </div>
      </div>
      <div class="form-group">
          <label for="priceRange">Price Range</label>
          <select class="form-control" name= userRequest[priceRange] id="priceRange">
            <option value= "1">$</option>
            <option value= "2">$$</option>
            <option value= "3">$$$</option>
            <option value= "4">$$$$</option>
            <option value= "5">$$$$$</option>
          </select>
        </div>
    </div>
    <div class="container">
        <div class="row">
          <div class="col text-center">
            <button type = "submit" class="btn btn-primary">Submit!</button>
          </div>
        </div>
      </div>
  </form>
</div>


