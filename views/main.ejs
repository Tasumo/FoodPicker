<% include ./partials/header %>

<div class="container">
  <% if(messages && messages.length > 0){ %>
      <div class="alert alert-danger" role="alert">
          <%= messages %>
      </div>
  <% } %>
</div>

<div class="container fluid">
<div class="container my-4">
  <div id="carouselExample1" class="carousel slide z-depth-1-half peopleCarouselImg" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/FoodImgs/salad.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/FoodImgs/ramen.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/FoodImgs/burger.jpg" alt="Third slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/FoodImgs/dumplings.jpg" alt="Fourth slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/FoodImgs/tacos.jpg" alt="Fifth slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/FoodImgs/korean_dish.jpg" alt="Sixth slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExample1" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample1" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container-fluid mt-4">
  <form action="/results" method="GET">
    <div class="row justify-content-center">
      <div class="col-sm-4 relative">
        <img src="pics/form2.png" class="img-fluid" />
        <div class="centered col-sm-9">
          <label for="InputLocation"><font size="2">Location</font></label>
          <input type="text" id="InputLocation" class="form-control rounded-0 transparent" name= userRequest[location] placeholder="Location">
        </div>
      </div>
      <div class="col-sm-4 relative">
        <img src="pics/form2.png" class="img-fluid" />
        <div class="form-group centered col-sm-9">
			<label for="distance"><font size="2">Distance (Miles)</font></label>
			<select class="form-control rounded-0 transparent" name= userRequest[distance] id="distance">
				<option value= "8047">5</option>
				<option value= "16094">10</option>
				<option value= "24141">15</option>
				<option value= "32187">20</option>
				<option value= "39999">25</option>
			</select>
          </div>
      </div>
	  <div class="col-sm-3 relative">
	    <img src="pics/form3.png" class="img-fluid" />
        <div class="form-group centered col-sm-9">
          <label for="priceRange"><font size="2">Price Range</font></label>
          <select class="form-control rounded-0 transparent" name= userRequest[priceRange] id="priceRange">
            <option value= "1">$</option>
            <option value= "2">$$</option>
            <option value= "3">$$$</option>
            <option value= "4">$$$$</option>
            <option value= "5">$$$$$</option>
          </select>
        </div>
	  </div>
    </div>
    <div class="row justify-content-center mt-4">
      <div class="col-sm-8">
        <img src="pics/form4.png" class="img-fluid" />
		<div class="col-sm-9 centered">
          <label for="searchTerm"><font size="2">Seach By</font></label>
          <input type="text" id="searchTerm" class="form-control rounded-0 transparent" name= userRequest[searchTerm] placeholder="Ex: food/restaurants/names" />
		</div>
      </div>
    </div>
    <div class="container">
        <div class="row">
          <div class="col text-center mt-3">
            <button type = "submit" class="btn btn-link col-7 col-sm-6 col-md-5 col-lg-4 col-xl-3 text-center mx-auto white_font">
                <img src="pics/button1.png" class="img-fluid">
                <div class="text centered">
                  Submit!
			    </div>
            </button>
          </div>
        </div>
      </div>
  </form>
</div>

