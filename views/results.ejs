<% include ./partials/header_results %>

<div class="container-fluid">
  <div class="row">
    <div class="col text-center">
      <h1> Your starting location: <%= location %> </h1>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <p>You have searched by: <%= term %></p>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h4>Your result: <%= name %> </h4>
    </div>
  </div>

</div>



<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-sm-6">
      <div id ="google_map_holder">
          <div id="google_map">
          </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div>
        <img src= "<%= image %>" class = "rounded img-fluid">
      </div>
    </div>
  </div>
  <div class ="row">
    <div class =" col-sm-auto mt-3 mx-auto">
      <a href="<%= yelpURL%>"><div type="button" class="btn btn-primary shadow"><h6><%= name %>'s Yelp Link</h6></div></a>
    </div>
    <div class =" col-sm-auto mt-3 mx-auto">
      <a href=""><div type="button" class="btn btn-secondary shadow"><h6>Choose another restaurant</h6></div></a>
    </div>
    <div class =" col-sm-auto mt-3 mx-auto">
      <a href="/"><div type="button" class="btn btn-secondary shadow"><h6>Choose again</h6></div></a>
    </div>
  </div>
</div>


